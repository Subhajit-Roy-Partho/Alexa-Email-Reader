{
  "manifest": {
    "manifestVersion": "1.0",
    "publishingInformation": {
      "isAvailableWorldwide": true,
      "testingInstructions": "Link account in Alexa app, connect mailbox via hosted web app, then test unread count, latest mail readout, and notification permission flow.",
      "distributionCountries": [],
      "automaticClonedLocale": {
        "locales": [
          {
            "source": "en-US"
          }
        ]
      },
      "locales": {
        "en-US": {
          "name": "Email Reader",
          "summary": "Read your latest emails and hear unread counts with Alexa.",
          "description": "Email Reader connects Gmail, Outlook, and custom IMAP/POP mailboxes. Ask for unread counts, hear your latest messages, and get Alexa notifications when new mail arrives.",
          "examplePhrases": [
            "Alexa, open Email Reader",
            "Alexa, ask Email Reader how many unread emails I have",
            "Alexa, ask Email Reader to read my latest emails"
          ],
          "keywords": [
            "email",
            "mail",
            "inbox",
            "unread",
            "notifications"
          ]
        }
      }
    },
    "privacyAndCompliance": {
